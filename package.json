{
  "name": "@ngsctt/weekwise",
  "version": "0.1.0",
  "description": "Quickly generate an HTML calendar",
  "main": "index.html",
  "scripts": {
    "build": "pug `find . -type f -name '*.pug'` --out docs --obj `echo '{\"repo\":\"'$npm_package_homepage'\"}'`",
    "serve": "light-server -s docs -w \"**/*.pug # npm run build\"",
    "test": "npm run build && npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngsctt/weekwise.git"
  },
  "dependencies": {
    "light-server": "^2.6.4",
    "pug": "^2.0.4"
  },
  "author": "Nathan Scott",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngsctt/weekwise/issues"
  },
  "homepage": "https://github.com/ngsctt/weekwise#readme"
}
